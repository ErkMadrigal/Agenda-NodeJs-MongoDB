<%- include ('partials/_header.ejs') -%>
<div class="container mt-4">
    <div class="row">
        <!-- card Form -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Nombre</label>
                            <input type="text" class="form-control" name="name" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput2">Apellidos</label>
                            <input type="text" class="form-control" name="lastName" placeholder="Apellidos">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea4">Descripcion</label>
                            <textarea class="form-control" name="description" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput2">Numero</label>
                            <input type="number" class="form-control" name="number" placeholder="Numero">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput3">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">add</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- end card form -->
        <!-- datos -->
        <div class="col-md-7">
            <% let cont = 1 %>
            <% data.forEach( (usr) => { %>
                <div class="card mb-5">
                    <h5 class="card-header"><%= cont ++ %> <%= usr.name %></h5>
                    <div class="card-body">
                      <h2 class="card-title"><%= usr.name %> <%= usr.lastName %></h2>
                      <p class="card-text"><%= usr.description %></p>
                      <p class="card-text"><%= usr.number %></p>
                      <p class="card-text"><%= usr.email %></p>
                      <a href="#" class="btn btn-primary">Editar</a>
                      <a href="#" class="btn btn-danger">Borrar</a>
                      <a href="#" class="btn btn-warning">Favoritos</a>
                    </div>
                </div>
           <% }) %>
        </div>
        <!-- end datos -->
    </div>
</div>
<%- include ('partials/_footer.ejs') -%>